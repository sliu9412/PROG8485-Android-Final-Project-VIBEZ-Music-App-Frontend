<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/layout_padding"
    tools:context=".activities.auth.AuthorizationActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paragraph_padding"
        android:adjustViewBounds="true"
        android:scaleType="centerCrop"
        android:src="@drawable/authorization" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/paragraph_padding"
        android:text="@string/authorization_fail_text"
        android:textAlignment="center" />

    <Button
        android:id="@+id/authorization_fail_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/authorization_fail_btn" />

</LinearLayout>